                            android:onClick="Deleter"
                            android:text="@string/deleter"
                            android:textColor="#00998F" />
                    </TableRow>

                    <TableRow android:id="@+id/pref9">

                        <Switch
                            android:id="@+id/switch9"
                            android:layout_width="wrap_content"
